!!!
%html{"ng-app" => "CloudNet"}
  %head
    = render 'shared/head'
  %body{class: body_class}
    - if current_user
      %div#layout.container
        %div#main.pure-u-1-1
          = menu_header
          .wrapper
            = render partial: 'shared/alerts'
            =# render partial: 'shared/breadcrumbs'
            = yield

      = render partial: 'shared/feedback'
    - else
      = javascript_include_tag "shared/session"
      .wrapper.login
        = render partial: 'shared/alerts'
        = yield
